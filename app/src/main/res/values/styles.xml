<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ContainerHeader">
        <item name="android:layout_width">350dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/container_header</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="LabelForInput">
        <item name="android:layout_width">350dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="InputLogin">
        <item name="android:background">@drawable/input_login</item>
        <item name="android:layout_width">350dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:layout_width">350dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>