<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="20dp">

    <LinearLayout
        android:id="@+id/residence_trend_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:contentDescription="@string/fragment_trend_residence_image_description"
            android:scaleType="centerCrop"
            android:src="@mipmap/img_residence_foreground" />

        <TextView
            android:id="@+id/title_residence_trend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:text="@string/fragment_trend_residence_title"
            android:textColor="@color/font"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/desc_residence_trend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment_trend_residence_location"
            android:textColor="@color/font"
            android:textSize="15sp" />
    </LinearLayout>

</FrameLayout>