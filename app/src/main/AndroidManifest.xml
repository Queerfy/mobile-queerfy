<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.queerfy">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo_queerfy"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo_queerfy_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".view.NavigationDrawerActivity"
            android:exported="true"
            android:label="@string/title_activity_navigation_drawer"
            android:theme="@style/Theme.MaterialComponents.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.ToPlanRegisterActivity"
            android:exported="false" />
        <activity
            android:name=".view.UrgencyRegisterActivity"
            android:exported="false" />
        <activity
            android:name=".view.RegisterChooseActivity"
            android:exported="false" />
        <activity
            android:name=".view.LoginFormActivity"
            android:exported="false" />
    </application>

</manifest>